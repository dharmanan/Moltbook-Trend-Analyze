# ===========================================
# MoltBridge Agent — Environment Variables
# ===========================================
# Bu dosyayı .env olarak kopyalayıp doldurun:
#   cp .env.example .env

# --- Moltbook ---
MOLTBOOK_API_KEY=moltbook_xxx
MOLTBOOK_AGENT_NAME=MoltBridgeAgent
MOLTBOOK_BASE_URL=https://www.moltbook.com/api/v1

# --- ERC-8004 ---
# Ethereum private key (testnet için! Mainnet'e geçmeden önce ayrı wallet kullanın)
ETH_PRIVATE_KEY=0x_your_private_key_here
ETH_RPC_URL=https://sepolia.base.org
ERC8004_CHAIN_ID=84532

# --- Agent Config ---
SCRAPE_INTERVAL_HOURS=4
REPORT_SUBMOLT=agentintelligence
LOG_LEVEL=INFO

